extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 My Portfolio

      p.lead.text-light
        | This is a portfolio of all my public projects. The source code of all these projects are viewable on GitHub and if you have any questions feel free to contact me.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
 
      each project in projects
        .cell
          a(href=`/project/${project.id}`)
            img.thumbnail(src=`${project.thumbnail_url}`)
            h5= project.project_name
      
